<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.liaoinstan.mylinearlayout.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.liaoinstan.mylinearlayout.view.MyWidgetView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/my"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/last"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/my"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/next"
        android:layout_alignTop="@+id/last"
        android:layout_toRightOf="@+id/last"
        android:layout_toEndOf="@+id/last" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="moveto"
        android:id="@+id/moveto"
        android:layout_below="@+id/last"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getcontent"
        android:id="@+id/getcontent"
        android:layout_alignTop="@+id/moveto"
        android:layout_toRightOf="@+id/moveto"
        android:layout_toEndOf="@+id/moveto" />
</RelativeLayout>
